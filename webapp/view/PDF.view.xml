<core:View xmlns:core="sap.ui.core" xmlns="sap.uxap" xmlns:layout="sap.ui.layout" xmlns:m="sap.m"
	controllerName="de.tammenit.ui5.homepage.controller.PDF" height="100%">
	<!--
		   xmlns:sample="sap.uxap.sample.ObjectPageOnJSON"
		   xmlns:goals="sap.uxap.sample.SharedBlocks.goals"
		   xmlns:employment="sap.uxap.sample.SharedBlocks.employment"
	-->
	<m:Page title="{i18n>appTitle}" showNavButton="true" navButtonPress="onNavBack">
		<m:content>
			<ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false" showTitleInHeaderContent="true" showEditHeaderButton="false"
				editHeaderButtonPress="handleEditBtnPress">
				<headerTitle>
					<ObjectPageHeader objectImageURI="{Image}" objectTitle="{Name}" objectImageShape="Circle" objectImageAlt="{Name}"
						objectSubtitle="{JobTitle}" isObjectIconAlwaysVisible="false" isObjectTitleAlwaysVisible="false" isObjectSubtitleAlwaysVisible="false"></ObjectPageHeader>
				</headerTitle>
				<headerContent>
					<layout:VerticalLayout class="sapUiMediumMarginTop">
						<m:Label text="{i18n>view.profile.pdfs.header}" design="Bold" class="projectfontlarge"/>
					</layout:VerticalLayout>
					<layout:VerticalLayout>
						<m:Link text="{Phone/Mobile}"/>
						<m:Link text="{Email/Work}"/>
					</layout:VerticalLayout>
					<layout:VerticalLayout>
						<m:HBox><m:Label text="{i18n>view.profile.residence}" class="sapUiSmallMarginEnd"/><m:Label text="{Addresses/WorkAddress/City}, {Addresses/WorkAddress/Country}"/></m:HBox>
						<m:HBox><m:Label text="{i18n>view.profile.availability}" class="sapUiSmallMarginEnd"/><m:Label text="{Availability}"/></m:HBox>
						<m:HBox><m:Label text="{i18n>view.profile.regions}" class="sapUiSmallMarginEnd"/><m:Label text="{Regions}"/></m:HBox>
					</layout:VerticalLayout>
				</headerContent>
				<sections>
					<ObjectPageSection>
						<subSections>
							<ObjectPageSubSection title="{i18n>view.pdf.section.cv.header}">
								<blocks>
									<m:Table id="idProductsTable" inset="false" items="{pdfs>/pdfs}">
										<m:headerToolbar>
											<m:Toolbar>
												<m:Title text="{i18n>view.pdf.section.cv.table.header}" level="H2"/>
											</m:Toolbar>
										</m:headerToolbar>
										<m:columns>
											<m:Column>
												<m:Text text="{i18n>view.pdf.section.cv.table.column.name}"/>
											</m:Column>
											<m:Column minScreenWidth="Tablet" demandPopin="true" width="8rem">
												<m:Text text="{i18n>view.pdf.section.cv.table.column.anonymous}"/>
											</m:Column>
											<m:Column minScreenWidth="Tablet" demandPopin="true">
												<m:Text text="{i18n>view.pdf.section.cv.table.column.url}"/>
											</m:Column>
										</m:columns>
										<m:items>
											<m:ColumnListItem>
												<m:cells>
													<m:ObjectIdentifier text="{pdfs>note}"/>
													<m:CheckBox enabled="true" editable="false" selected="{pdfs>anonymous}"/>
													<m:Link text="{pdfs>url}" target="_blank" href="{pdfs>url}"/>
												</m:cells>
											</m:ColumnListItem>
										</m:items>
									</m:Table>
								</blocks>
							</ObjectPageSubSection>
						</subSections>
					</ObjectPageSection>
					<ObjectPageSection>
						<subSections>
							<ObjectPageSubSection title="{i18n>view.pdf.section.others.header}">
								<blocks>
									<m:Text text="{i18n>view.pdf.section.others.text}"></m:Text>
								</blocks>
							</ObjectPageSubSection>
						</subSections>
					</ObjectPageSection>
				</sections>
			</ObjectPageLayout>
		</m:content>
	</m:Page>
</core:View>