<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="de.tammenit.ui5.homepage.controller.Home">
	<App id="app">
		<pages>
			<Page title="My cool UI5 Homepage"
				busy="{viewModel>/busy}"
				busyIndicatorDelay="{viewModel>/delay}">
				<content>
					<FlexBox 
						wrap="Wrap"
						alignItems="Center"
						justifyContent="Center">
						<SlideTile  class="sapUiSmallMargin">
							<tiles>
								<GenericTile header="Welcome"
									frameType="TwoByOne"
									headerImage="sap-icon://hint"
									size="L"
									>
									<tileContent>
										<TileContent>
											<content>
												<NewsContent contentText="Here you get a lot of information about me and my my work."/>
											</content>
										</TileContent>
									</tileContent>
								</GenericTile>
								<GenericTile header="PDF Download"
									frameType="TwoByOne"
									headerImage="sap-icon://hint"
									size="L"
									>
									<tileContent>
										<TileContent>
											<content>
												<NewsContent contentText="You can also download the data as PDF file"/>
											</content>
										</TileContent>
									</tileContent>
								</GenericTile>
								<GenericTile header="How to use"
									frameType="TwoByOne"
									headerImage="sap-icon://hint"
									size="L"
									>
									<tileContent>
										<TileContent>
											<content>
												<NewsContent contentText="Just click on one of the tiles below and go to my bio, my project or my customers"/>
											</content>
										</TileContent>
									</tileContent>
								</GenericTile>
							</tiles>
						</SlideTile>
						<SlideTile  class="sapUiSmallMargin">
							<tiles>
								<GenericTile class="picture1" frameType="TwoByOne"/>
								<GenericTile class="picture2" frameType="TwoByOne"/>
								<GenericTile class="picture3" frameType="TwoByOne"/>
								<GenericTile class="picture4" frameType="TwoByOne"/>
							</tiles>
						</SlideTile>
					</FlexBox>
						<TileContainer height="60%" editable="false" allowAdd="false" id="__container0">
							<tiles>
								<StandardTile title="About me" info="Bio" icon="sap-icon://customer" 
									press="showAboutMe" removable="false"/>
								<StandardTile title="My projects" info="Work"
									icon="sap-icon://work-history" removable="false"
									press="showProjects"/>
								<StandardTile title="My customers" info="Info"
									icon="sap-icon://work-history" removable="false"
									press="comingNext"/>
							</tiles>
						</TileContainer>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>