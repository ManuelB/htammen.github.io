<mvc:View
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:forms="sap.ui.layout.form"
		xmlns:core="sap.ui.core"
		xmlns:layout="sap.ui.layout"
		xmlns="sap.m">

	<forms:SimpleForm labelSpanL="4" labelSpanM="4"
					  labelSpanS="4" emptySpanL="0" emptySpanM="0" emptySpanS="0"
					  maxContainerCols="2"
					  layout="ResponsiveLayout"
					  width="100%">

		<core:Title text="{i18n>view.profile.block.mailing.header}"/>
		<Label text="{i18n>view.profile.block.mailing.work}"/>
		<Text text="{Email/Work}"/>
		<Label text="{i18n>view.profile.block.mailing.home}"/>
		<Text text="{Email/Home}"/>

	</forms:SimpleForm>
</mvc:View>