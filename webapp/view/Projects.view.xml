<core:View xmlns:core="sap.ui.core"
		   xmlns="sap.uxap"
		   xmlns:layout="sap.ui.layout"
		   xmlns:m="sap.m"
		   xmlns:projects="de.tammenit.ui5.homepage.view.SharedBlocks.projects"
		   controllerName="de.tammenit.ui5.homepage.controller.Projects"
		   height="100%">
	<!--
		   xmlns:sample="sap.uxap.sample.ObjectPageOnJSON"
		   xmlns:goals="sap.uxap.sample.SharedBlocks.goals"
		   xmlns:employment="sap.uxap.sample.SharedBlocks.employment"
	-->
	<m:Page title="{i18n>appTitle}" showNavButton="true" navButtonPress="onNavBack">
		<m:content>
			<ObjectPageLayout id="ObjectPageLayout"
							  enableLazyLoading="false"
							  showTitleInHeaderContent="true"
							  showEditHeaderButton="false"
							  editHeaderButtonPress="handleEditBtnPress"
							  sections="{Projects}">
				<headerTitle>
					<ObjectPageHeader objectImageURI="{Image}"
									  objectTitle="{Name}"
									  objectImageShape="Circle"
									  objectImageAlt="{Name}"
									  objectSubtitle="{JobTitle}"
									  isObjectIconAlwaysVisible="false"
									  isObjectTitleAlwaysVisible="false"
									  isObjectSubtitleAlwaysVisible="false">
						<!--
						<actions>
							<ObjectPageHeaderActionButton icon="sap-icon://pull-down" text="show section" 
								type="Emphasized"
								tooltip="{i18n>view.profile.downloadpdf.tooltip}"
								press="downloadProfile"/>
						</actions>
						-->
					</ObjectPageHeader>
				</headerTitle>
		 
				<headerContent>
					<layout:VerticalLayout class="sapUiMediumMarginTop">
						<m:Label text="{i18n>view.profile.projects.header}" design="Bold" class="projectfontlarge"/>
					</layout:VerticalLayout>

					<layout:VerticalLayout>
						<m:Link text="{Phone/Mobile}"/>
						<m:Link text="{Email/Work}"/>
					</layout:VerticalLayout>
		 
					<layout:VerticalLayout>
						<m:HBox><m:Label text="{i18n>view.profile.residence}" class="sapUiSmallMarginEnd"/><m:Label text="{Addresses/WorkAddress/City}, {Addresses/WorkAddress/Country}"/></m:HBox>
						<m:HBox><m:Label text="{i18n>view.profile.availability}" class="sapUiSmallMarginEnd"/><m:Label text="{Availability}"/></m:HBox>
						<m:HBox><m:Label text="{i18n>view.profile.regions}" class="sapUiSmallMarginEnd"/><m:Label text="{Regions}"/></m:HBox>
					</layout:VerticalLayout>
				</headerContent>
		 
				<sections>
					<ObjectPageSection>
						<subSections>
							<ObjectPageSubSection title="{Year}">
								<blocks>
									<projects:BlockProjects id="projects">
										<projects:mappings>
											<ModelMapping externalModelName="undefined" externalPath="items" internalModelName="model" />
										</projects:mappings>
									</projects:BlockProjects>
								</blocks>
							</ObjectPageSubSection>
						</subSections>
					</ObjectPageSection>
				</sections>
			</ObjectPageLayout>
		</m:content>
	</m:Page>
</core:View>